<configuration>
  <!-- Console JSON logs (kept, good for local dev) -->
  <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <!-- ISO timestamp field named @timestamp -->
        <timestamp>
          <timeZone>UTC</timeZone>
          <fieldName>@timestamp</fieldName>
        </timestamp>

        <!-- Core fields formatted as JSON -->
        <pattern>
          <pattern>
            {
              "level": "%level",
              "logger_name": "%logger",
              "thread_name": "%thread",
              "message": "%message",
              "traceId": "%X{traceId:-}",
              "spanId": "%X{spanId:-}"
            }
          </pattern>
        </pattern>
      </providers>
    </encoder>
  </appender>

  <!-- File JSON logs (Promtail will tail ./logs/app.log) -->
  <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- Where the *current* log file lives -->
    <file>logs/app.log</file>

    <!-- JSON formatting -->
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <!-- ISO timestamp field named @timestamp -->
        <timestamp>
          <timeZone>UTC</timeZone>
          <fieldName>@timestamp</fieldName>
        </timestamp>

        <!-- Core fields formatted as JSON -->
        <pattern>
          <pattern>
            {
              "level": "%level",
              "logger_name": "%logger",
              "thread_name": "%thread",
              "message": "%message",
              "traceId": "%X{traceId:-}",
              "spanId": "%X{spanId:-}"
            }
          </pattern>
        </pattern>
      </providers>
    </encoder>

    <!-- Daily rotation: logs/app-YYYY-MM-DD.log, keep 7 days -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/app-%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- Root logger sends to BOTH console and file -->
  <root level="INFO">
    <appender-ref ref="JSON_CONSOLE"/>
    <appender-ref ref="JSON_FILE"/>
  </root>
</configuration>
